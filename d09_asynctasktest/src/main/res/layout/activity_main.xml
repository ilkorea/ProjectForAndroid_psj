<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.d09_asynctasktest.MainActivity">

<android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline_percent_80"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="330dp"
    app:layout_constraintGuide_percent="0.8"/>

<Button
    android:id="@+id/no0"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
    android:onClick="downloadMP3"
    android:singleLine="true"
    android:tag="0"
    android:text="[1] The Verve - Bitter Sweet Symphony"
    android:textAllCaps="false"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/guideline_percent_80"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"/>

<Button
    android:id="@+id/no1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
    android:onClick="downloadMP3"
    android:singleLine="true"
    android:tag="1"
    android:text="[2] Mika - Grace Kelly"
    android:textAllCaps="false"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp"
    app:layout_constraintRight_toLeftOf="@+id/guideline_percent_80"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintHorizontal_bias="0.66"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/no0"/>

<Button
    android:id="@+id/no2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
    android:onClick="downloadMP3"
    android:singleLine="true"
    android:tag="2"
    android:text="[3] 존재하지 않는 URL"
    android:textAllCaps="false"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp"
    app:layout_constraintRight_toLeftOf="@+id/guideline_percent_80"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintHorizontal_bias="0.18"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/no1"/>

<Button
    android:id="@+id/progress0"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:singleLine="true"
    app:layout_constraintLeft_toLeftOf="@+id/guideline_percent_80"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="16dp"
    app:layout_constraintTop_toTopOf="@+id/no0"
    app:layout_constraintHorizontal_bias="0.0"/>

<Button
    android:id="@+id/progress1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="16dp"
    app:layout_constraintLeft_toLeftOf="@+id/guideline_percent_80"
    app:layout_constraintTop_toTopOf="@+id/no1"/>

<Button
    android:id="@+id/progress2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="16dp"
    app:layout_constraintLeft_toLeftOf="@+id/guideline_percent_80"
    app:layout_constraintTop_toTopOf="@+id/no2"/>

</android.support.constraint.ConstraintLayout>
